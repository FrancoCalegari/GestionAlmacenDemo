<%- include('../partials/header') %>

<div style="margin-bottom: 2rem">
	<h1 style="font-size: 2rem; font-weight: 700; margin-bottom: 0.5rem">
		Panel de Control
	</h1>
	<p style="color: var(--text-secondary)">
		Bienvenido, Admin. Aquí tienes un resumen.
	</p>
</div>

<!-- Stats Grid -->
<div
	style="
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
		margin-bottom: 2rem;
	"
>
	<div class="glass-card">
		<div
			style="display: flex; justify-content: space-between; align-items: start"
		>
			<div>
				<p style="color: var(--text-secondary); font-size: 0.875rem">
					Productos
				</p>
				<h3
					style="font-size: 2rem; font-weight: 700; color: var(--accent-color)"
				>
					<%= stats.products %>
				</h3>
			</div>
			<div
				style="
					background: rgba(59, 130, 246, 0.1);
					padding: 0.75rem;
					border-radius: 0.5rem;
				"
			>
				<i
					class="fa-solid fa-box"
					style="color: var(--accent-color); font-size: 1.5rem"
				></i>
			</div>
		</div>
	</div>

	<div class="glass-card">
		<div
			style="display: flex; justify-content: space-between; align-items: start"
		>
			<div>
				<p style="color: var(--text-secondary); font-size: 0.875rem">
					Usuarios
				</p>
				<h3 style="font-size: 2rem; font-weight: 700; color: var(--success)">
					<%= stats.users %>
				</h3>
			</div>
			<div
				style="
					background: rgba(34, 197, 94, 0.1);
					padding: 0.75rem;
					border-radius: 0.5rem;
				"
			>
				<i
					class="fa-solid fa-users"
					style="color: var(--success); font-size: 1.5rem"
				></i>
			</div>
		</div>
	</div>

	<div class="glass-card">
		<div
			style="display: flex; justify-content: space-between; align-items: start"
		>
			<div>
				<p style="color: var(--text-secondary); font-size: 0.875rem">
					Ventas Hoy
				</p>
				<h3 style="font-size: 2rem; font-weight: 700; color: var(--warning)">
					$<%= stats.salesToday %>
				</h3>
			</div>
			<div
				style="
					background: rgba(245, 158, 11, 0.1);
					padding: 0.75rem;
					border-radius: 0.5rem;
				"
			>
				<i
					class="fa-solid fa-chart-line"
					style="color: var(--warning); font-size: 1.5rem"
				></i>
			</div>
		</div>
	</div>
</div>

<!-- Quick Actions -->
<div
	style="
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
	"
>
	<a
		href="/admin/products"
		class="glass-card"
		style="display: block; transition: transform 0.2s"
	>
		<h3 style="margin-bottom: 1rem">
			<i class="fa-solid fa-boxes-stacked"></i> Gestión de Productos
		</h3>
		<p style="color: var(--text-secondary)">
			Agregar, editar o eliminar productos del inventario.
		</p>
	</a>

	<a
		href="/admin/users"
		class="glass-card"
		style="display: block; transition: transform 0.2s"
	>
		<h3 style="margin-bottom: 1rem">
			<i class="fa-solid fa-user-shield"></i> Gestión de Usuarios
		</h3>
		<p style="color: var(--text-secondary)">
			Administrar roles y acceso del personal.
		</p>
	</a>

	<a
		href="/admin/payments"
		class="glass-card"
		style="display: block; transition: transform 0.2s"
	>
		<h3 style="margin-bottom: 1rem">
			<i class="fa-solid fa-credit-card"></i> Métodos de Pago
		</h3>
		<p style="color: var(--text-secondary)">
			Configurar tarjetas, recargos y billeteras.
		</p>
	</a>

	<a
		href="/admin/sales"
		class="glass-card"
		style="display: block; transition: transform 0.2s"
	>
		<h3 style="margin-bottom: 1rem">
			<i class="fa-solid fa-receipt"></i> Historial de Ventas
		</h3>
		<p style="color: var(--text-secondary)">
			Ver todas las transacciones detalladas.
		</p>
	</a>

	<a
		href="/admin/analytics"
		class="glass-card"
		style="display: block; transition: transform 0.2s"
	>
		<h3 style="margin-bottom: 1rem">
			<i class="fa-solid fa-chart-pie"></i> Analítica
		</h3>
		<p style="color: var(--text-secondary)">
			Productos más vendidos y reportes.
		</p>
	</a>
</div>

<%- include('../partials/footer') %>
