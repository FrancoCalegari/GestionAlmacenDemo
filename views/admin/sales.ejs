<%- include('../partials/header') %>

<div
	style="
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
	"
>
	<h1 style="font-size: 2rem; font-weight: 700">Historial de Ventas</h1>
	<a href="/admin" class="btn" style="background: var(--bg-accent)"
		><i class="fa-solid fa-arrow-left"></i> Volver</a
	>
</div>

<div class="glass-card">
	<div style="overflow-x: auto">
		<table style="width: 100%; border-collapse: collapse">
			<thead>
				<tr
					style="text-align: left; border-bottom: 1px solid var(--border-color)"
				>
					<th style="padding: 1rem">Fecha</th>
					<th style="padding: 1rem">Ticket ID</th>
					<th style="padding: 1rem">Cajero</th>
					<th style="padding: 1rem">Items</th>
					<th style="padding: 1rem">Total</th>
					<th style="padding: 1rem">Acciones</th>
				</tr>
			</thead>
			<tbody>
				<% if (sales && sales.length > 0) { %> <% sales.forEach(sale => { %>
				<tr style="border-bottom: 1px solid var(--glass-border)">
					<td
						data-label="Fecha"
						style="padding: 1rem; color: var(--text-secondary)"
					>
						<%= new Date(sale.created_at).toLocaleString() %>
					</td>
					<td
						data-label="Ticket ID"
						style="padding: 1rem; font-family: monospace"
					>
						<%= sale.id.split('-')[0] %>
					</td>
					<td data-label="Cajero" style="padding: 1rem">
						<%= sale.users ? sale.users.username : 'N/A' %>
					</td>
					<td data-label="Items" style="padding: 1rem">
						<%= sale.sale_items ? sale.sale_items.length : 0 %>
					</td>
					<td
						data-label="Total"
						style="padding: 1rem; font-weight: 600; color: var(--success)"
					>
						$<%= (parseFloat(sale.total_base || sale.total) +
						parseFloat(sale.total_surcharge || 0)).toFixed(2) %>
					</td>
					<td data-label="Acciones" style="padding: 1rem">
						<a
							href="/pos/ticket/<%= sale.id %>"
							target="_blank"
							class="btn"
							style="
								padding: 0.5rem;
								background: var(--bg-primary);
								border: 1px solid var(--border-color);
								font-size: 0.875rem;
								width: 100%;
							"
						>
							<i class="fa-solid fa-print"></i> Ticket
						</a>
					</td>
				</tr>
				<% }) %> <% } else { %>
				<tr>
					<td
						colspan="6"
						style="
							padding: 1rem;
							text-align: center;
							color: var(--text-secondary);
						"
					>
						No hay ventas registradas.
					</td>
				</tr>
				<% } %>
			</tbody>
		</table>
	</div>
</div>

<%- include('../partials/footer') %>
